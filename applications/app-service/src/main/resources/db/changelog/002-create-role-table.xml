<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-role-table" author="sistema">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="roles"/>
            </not>
        </preConditions>

        <comment>Crear tabla roles</comment>

        <createTable tableName="roles">
            <column name="id_rol" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nombre" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="descripcion" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="roles" indexName="idx_role_nombre">
            <column name="nombre"/>
        </createIndex>

        <insert tableName="roles">
            <column name="id_rol" value="80e86d27-20a4-44be-b90d-44eeb378d409"/>
            <column name="nombre" value="ADMIN"/>
            <column name="descripcion" value="Administrador del sistema"/>
        </insert>

        <insert tableName="roles">
            <column name="id_rol" value="b71ed6c9-1dd9-4c14-8a4a-fe06166d5cdb"/>
            <column name="nombre" value="CLIENT"/>
            <column name="descripcion" value="Usuario estÃ¡ndar"/>
        </insert>

        <insert tableName="roles">
            <column name="id_rol" value="3a371249-a1f0-4eb3-b06c-5a670ab6eca9"/>
            <column name="nombre" value="GUEST"/>
            <column name="descripcion" value="Usuario invitado"/>
        </insert>

        <rollback>
            <dropTable tableName="roles"/>
        </rollback>
    </changeSet>

    <!-- ChangeSet separado para agregar id_rol a users existente -->
    <changeSet id="002-add-role-column-to-users" author="sistema">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="users"/>
            <tableExists tableName="roles"/>
            <not>
                <columnExists tableName="users" columnName="id_rol"/>
            </not>
        </preConditions>

        <comment>Agregar columna id_rol a tabla users existente</comment>

        <!-- PASO 1: Agregar columna NULLABLE primero -->
        <addColumn tableName="users">
            <column name="id_rol" type="VARCHAR(36)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- PASO 2: Actualizar registros existentes con rol por defecto -->
        <update tableName="users">
            <column name="id_rol" value="2"/>
            <where>id_rol IS NULL</where>
        </update>

        <!-- PASO 3: Ahora hacer la columna NOT NULL -->
        <addNotNullConstraint tableName="users"
                              columnName="id_rol"
                              columnDataType="VARCHAR(36)"/>

        <!-- PASO 4: Agregar FK constraint -->
        <addForeignKeyConstraint baseTableName="users"
                                 baseColumnNames="id_rol"
                                 constraintName="fk_user_role"
                                 referencedTableName="roles"
                                 referencedColumnNames="id_rol"/>

        <createIndex tableName="users" indexName="idx_user_id_rol">
            <column name="id_rol"/>
        </createIndex>

        <rollback>
            <dropForeignKeyConstraint baseTableName="users" constraintName="fk_user_role"/>
            <dropColumn tableName="users" columnName="id_rol"/>
        </rollback>
    </changeSet>

</databaseChangeLog>